pipeline {
agent any
/* Déclarations des étapes de construction du Pipeline */

stages {
    stage('build') {
      steps {
        script {
          echo "Checking de la coque"
          sleep 10
          echo "Integrité de la coque à 100%"
        }
      }
    }
    stage('Test') {
      steps {
        script {
          echo "Verification des équipement de navigation"
          sleep 10
          echo "Léger disfonctionnement de la carte numerique" 
        }
      }
    }

    stage('Deploy') {
      steps {
        script {
          echo "Verification des equipements de communication"
          sleep 10
          echo "Test radio ok. "    
        }
      }
    }

    stage('Update_Date') {
        steps {
          script {
            echo "Mise à jour de la plage de dates pour inclure les dates du lancement sur Mars"
            sleep 5
            echo "Mise à jour réussi" 
          }
        }
    }

    stage('Loading_time_reduce') {
        steps {
          script {
            echo "Réduction du temps de chargement des listes de vols"
            sleep 5
            echo "Réduction effectué" 
          }
        }
    }

    stage('Summer_Sales_Saturn') {
        steps {
          script {
            echo "Promouvoir les soldes d'été pour Saturne"
            sleep 5
            echo "Promotions effectuées" 
          }
        }
    }

    stage('Concentration_below_250PPM') {
        steps {
          script {
            echo "Maintiens de la concentration des réservoir de carburant au dessus des 250 PPM au lancement"
            sleep 5
            echo "Maintiens effectué" 
          }
        }
    }

    stage('Consumption_by_1%') {
        steps {
          script {
            echo "Réduction de la consommation globale de carburant de 1%"
            sleep 5
            echo "Réduction effectuée" 
          }
        }
    }

    stage('Hiring_Engineer') {
        steps {
          script {
            echo "Enbauche d'un nouvel ingénieur"
            sleep 5
            echo "Embauche effectué" 
          }
        }
    }
}

}
